---
import { Image } from 'astro:assets';
import type { CollectionEntry } from 'astro:content';
import FormattedDate from './FormattedDate.astro';

interface Props {
  posts: CollectionEntry<'blog'>[];
}

const { posts } = Astro.props;
---

<section class="posts" id="posts">
  {posts.map((post, index) => {
    const safeSlug = (post.slug || post.id || `post-${index}`).toString();
    const anchorId = `post-${safeSlug.replace(/[^a-z0-9]/gi, '-').toLowerCase()}`;
    return (
      <article class="post-card surface-card" aria-labelledby={anchorId}>
        <a class="post-link" href={`/blog/${post.id}/`}>
          <div class:list={['media', { 'media--reverse': index % 2 === 1 }]}>
            {post.data.heroImage ? (
              <Image
                class="media__image"
                width={520}
                height={320}
                src={post.data.heroImage}
                alt={post.data.title}
                loading={index > 2 ? 'lazy' : 'eager'}
              />
            ) : (
              <div class="media__placeholder" aria-hidden="true" />
            )}
          </div>
          <div class="content">
            <span class="card-kicker">Art√≠culo</span>
            <p class="date">
              <FormattedDate date={post.data.pubDate} />
            </p>
            <h3 id={anchorId}>{post.data.title}</h3>
            {post.data.description && <p class="excerpt">{post.data.description}</p>}
            {post.data.tags && (
              <div class="tags" aria-label="Etiquetas">
                {post.data.tags.map((tag) => (
                  <span class="tag">{tag}</span>
                ))}
              </div>
            )}
          </div>
        </a>
      </article>
    );
  })}
</section>

<style>
  .posts {
    display: flex;
    flex-direction: column;
    gap: 3rem;
  }

  .post-card {
    padding: clamp(1.8rem, 3vw, 2.6rem);
    background: var(--surface-card-bg);
    border: 1px solid var(--surface-card-border);
    transition: transform 0.25s ease, box-shadow 0.25s ease, border 0.25s ease;
  }

  .post-link {
    display: grid;
    grid-template-columns: minmax(0, 320px) minmax(0, 1fr);
    gap: 2.5rem;
    color: inherit;
    text-decoration: none;
    min-height: 100%;
  }

  .post-card:hover,
  .post-card:focus-within {
    transform: translateY(-6px);
    box-shadow: 0 30px 65px rgba(0, 0, 0, 0.55);
    border-color: var(--surface-card-hover-border);
  }

  .post-link:focus-visible,
  .post-link:hover {
    color: inherit;
  }

  .media {
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .media--reverse {
    order: 2;
  }

  .media__image {
    width: 100%;
    height: auto;
    border-radius: 22px;
    box-shadow: var(--shadow-soft);
  }

  .media__placeholder {
    width: 100%;
    aspect-ratio: 4 / 3;
    border-radius: 22px;
    background:
      radial-gradient(circle at 25% 25%, rgba(255, 189, 174, 0.35), transparent 65%),
      var(--bg-muted);
    border: 1px dashed var(--surface-card-border);
  }

  .content {
    display: flex;
    flex-direction: column;
    justify-content: center;
    gap: 1rem;
  }

  .card-kicker {
    text-transform: uppercase;
    letter-spacing: 6px;
    font-size: 0.8rem;
    color: rgba(var(--text), 0.6);
  }

  .date {
    margin: 0;
    color: rgba(var(--text), 0.7);
    font-size: 0.95rem;
  }

  h3 {
    color: var(--accent-strong);
    margin: 0;
    line-height: 1.2;
  }

  .excerpt {
    margin: 0;
    color: rgba(var(--text), 0.85);
  }

  .tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .tag {
    display: inline-flex;
    align-items: center;
    padding: 0.4rem 0.9rem;
    border-radius: 999px;
    background: var(--accent-soft);
    color: var(--accent-strong);
    font-size: 0.75rem;
    letter-spacing: 1px;
    text-transform: uppercase;
    border: 1px solid var(--surface-card-border);
  }

  @media (max-width: 960px) {
    .post-link {
      grid-template-columns: 1fr;
      gap: 1.75rem;
    }

    .media--reverse {
      order: 0;
    }
  }

  @media (max-width: 720px) {
    .post-card {
      padding: 1.6rem;
    }
  }
</style>
