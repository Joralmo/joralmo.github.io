<button type="button" class="back-to-top" data-back-to-top aria-label="Volver al inicio">
  <span aria-hidden="true">â¬†</span>
</button>

<style>
  .back-to-top {
    position: fixed;
    right: 1.5rem;
    bottom: 1.5rem;
    width: 3.25rem;
    height: 3.25rem;
    border-radius: 999px;
    border: 1px solid var(--border-strong);
    background: var(--floating-btn-bg);
    color: var(--floating-btn-text);
    display: grid;
    place-items: center;
    box-shadow: var(--shadow-soft);
    cursor: pointer;
    transition: opacity 0.2s ease, transform 0.2s ease;
    opacity: 0;
    transform: translateY(12px);
    pointer-events: none;
    z-index: 900;
  }

  .back-to-top[data-visible="true"] {
    opacity: 1;
    transform: translateY(0);
    pointer-events: auto;
  }

  .back-to-top:hover,
  .back-to-top:focus-visible {
    background: var(--floating-btn-hover-bg);
    color: var(--floating-btn-hover-text);
  }

  @media (max-width: 720px) {
    .back-to-top {
      right: 1rem;
      bottom: 1rem;
    }
  }
</style>

<script is:inline>
  const button = document.currentScript?.previousElementSibling;
  if (button) {
    const toggleVisibility = () => {
      const shouldShow = window.scrollY > 400;
      button.dataset.visible = shouldShow ? 'true' : 'false';
      button.tabIndex = shouldShow ? 0 : -1;
      button.setAttribute('aria-hidden', shouldShow ? 'false' : 'true');
    };

    toggleVisibility();
    window.addEventListener('scroll', toggleVisibility, { passive: true });

    button.addEventListener('click', () => {
      window.scrollTo({ top: 0, behavior: 'smooth' });
    });
  }
</script>
