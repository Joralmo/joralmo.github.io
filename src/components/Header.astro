---
import { SITE_TITLE } from '../consts';
import HeaderLink from './HeaderLink.astro';
---

<header>
	<div class="inner">
		<a class="brand" href="/">{SITE_TITLE}</a>
		<nav>
			<HeaderLink href="/">Posts</HeaderLink>
			<HeaderLink href="/blog">Archivo</HeaderLink>
			<HeaderLink href="/about">Nosotros</HeaderLink>
			<a class="contact" href="mailto:info@noemec.net">Contacto</a>
		</nav>
	</div>
</header>
<style>
	header {
		position: sticky;
		top: 0;
		z-index: 10;
		background: rgba(27, 20, 19, 0.92);
		backdrop-filter: blur(12px);
		border-bottom: 1px solid var(--surface-border);
	}
	.inner {
		width: min(1100px, calc(100% - 3rem));
		margin: 0 auto;
		display: flex;
		align-items: center;
		justify-content: space-between;
		gap: 2rem;
		padding: 1.25rem 0;
	}
	.brand {
		font-weight: 700;
		text-decoration: none;
		font-size: 1rem;
		letter-spacing: 4px;
		text-transform: uppercase;
		color: rgba(255, 210, 200, 0.9);
	}
	nav {
		display: flex;
		align-items: center;
		gap: 1rem;
	}
	nav :global(a) {
		padding: 0.5rem 0.9rem;
		border-radius: 999px;
		font-size: 0.95rem;
		color: rgba(255, 231, 223, 0.85);
		text-decoration: none;
		transition: background 0.2s ease, color 0.2s ease, transform 0.2s ease;
	}
	nav :global(a:hover),
	nav :global(a.active) {
		background: var(--accent-soft);
		color: var(--accent-strong);
		transform: translateY(-1px);
	}
	.contact {
		background: var(--accent);
		color: #1b1413;
		font-weight: 700;
		box-shadow: 0 12px 30px rgba(242, 131, 125, 0.35);
	}
	.contact:hover {
		background: var(--accent-strong);
		color: #1b1413;
	}
	@media (max-width: 720px) {
		.inner {
			flex-direction: column;
			align-items: flex-start;
			padding: 1rem 0 1.2rem;
		}
		nav {
			flex-wrap: wrap;
			gap: 0.5rem;
		}
	}
</style>
